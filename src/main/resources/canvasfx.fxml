                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
               <FlowPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </FlowPane.margin>
            </Button>
            <Button  mnemonicParsing="false" text="Line" onAction="#lineClicked">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
