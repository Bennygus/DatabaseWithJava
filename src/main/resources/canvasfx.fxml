      <FlowPane prefHeight="70.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button  mnemonicParsing="false" text="Circle" onAction="#circleClicked">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
